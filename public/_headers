# _headers file for Cloudflare Pages

# These security headers apply to ALL pages across your entire site
/*
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://www.googletagmanager.com https://scripts.simpleanalyticscdn.com https://static.cloudflareinsights.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https: blob:; connect-src 'self' https://www.google-analytics.com https://queue.simpleanalyticscdn.com https://cloudflareinsights.com; frame-src 'self' https://www.google.com;
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload
  Permissions-Policy: camera=(), microphone=(), geolocation=()
  X-Robots-Tag: index, follow

# Cache CSS/JS files for 1 year because they have unique names (versioning)
/_next/static/css/*
  Cache-Control: public, max-age=31536000, immutable
/_next/static/js/*
  Cache-control: public, max-age=31536000, immutable

# Cache fonts for 1 year
*.woff2:
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: font/woff2
*.woff:
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: font/woff

# Cache static images for 1 year with compression hints
/images/*
  Cache-Control: public, max-age=31536000, immutable
*.webp:
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: image/webp
*.jpg:
  Cache-Control: public, max-age=31536000, immutable
*.jpeg:
  Cache-Control: public, max-age=31536000, immutable
*.png:
  Cache-Control: public, max-age=31536000, immutable

# Cache sitemap for 6 hours
/sitemap.xml
  Cache-Control: public, max-age=21600
  Content-Type: application/xml; charset=utf-8

# SEO pages get special caching
/seo/*
  Cache-Control: public, max-age=3600
  X-Robots-Tag: index, follow, max-snippet:-1, max-image-preview:large